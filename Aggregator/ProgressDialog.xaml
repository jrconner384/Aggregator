<Window x:Class="Aggregator.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aggregator"
        mc:Ignorable="d"
        Title="Status" Height="300" Width="413.318">
    <Grid>
        <Button x:Name="finishButton" Content="Finish" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsEnabled="False" Click="finishButton_Click"/>
        <Button x:Name="openFileButton" Content="Open File" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Height="22" VerticalAlignment="Bottom" IsEnabled ="False"/>
        <ProgressBar Margin="10,0,170,10" Height="10" VerticalAlignment="Bottom"/>
        <RichTextBox x:Name="progressTextBox" Margin="10,10,10,37" />
    </Grid>
</Window>
